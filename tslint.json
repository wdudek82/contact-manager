{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "ter-arrow-parens": [true, "always"],
    "arrow-parens": [true, "always"],
    "import-name": [true, { "styledComponents": "styled" }]
  },
  "rulesDirectory": [],
  "rules": {
    "no-console": [false, "log", "warn"],
    "no-consecutive-blank-lines": [true, 2],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "ter-arrow-parens": [true, "always"],
    "arrow-parens": [true, "always"],
    "import-name": [true, { "styledComponents": "styled" }]
  }
}
